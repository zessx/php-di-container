{
    "name": "zessx/php-di-container",
    "description": "Self-made Dependency Injection Container for learning purpose",
    "type": "library",
    "license": "GPLv3",
    "authors": [
        {
            "name": "zessx",
            "email": "contact@zes.sx"
        }
    ],
    "scripts": {
        "test": "phpunit",
        "check": "php-cs-fixer",
        "fix": "php-cs-fixer fix --allow-risky=yes"
    },
    "autoload": {
        "psr-4": {
            "ZCode\\DI\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ZCode\\DI\\Test\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.4",
        "phpunit/phpunit": "^8.5"
    }
}
